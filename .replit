modules = ["python-3.11", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["fontconfig", "ghostscript", "gitFull", "glib", "glibcLocales", "harfbuzz", "libxcrypt", "pango", "playwright-driver", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn src.iva.server:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37687
externalPort = 3001

[[ports]]
localPort = 43533
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "src.iva.server:app", "--host", "0.0.0.0", "--port", "5000"]
